<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="2">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_fragment_profile_dialog_common"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <TextView
        android:text="@string/activities.usersactivity.view_profile_other_tags"
        android:layout_marginLeft="14dp"
        android:textColor="@android:color/holo_blue_light"
        android:textSize="22sp"
        android:layout_marginTop="6dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <View
        android:id="@+id/fragment_profile_dialog_horizontal_line"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="14dp"
        android:background="@android:color/holo_blue_dark"
        android:layout_marginBottom="0dp"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_fragment_profile_dialog_uncommon"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

</LinearLayout>