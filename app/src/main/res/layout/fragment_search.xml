<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageButton
        android:id="@+id/fragment_search_prev_page"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/activity_main_prev_page"
        android:visibility="gone"/>

    <EditText
        android:id="@+id/fragment_search_search_video"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:hint="@string/activities.mainactivity.search_default_text"
        android:layout_weight="1"
        />

    <Button
        android:id="@+id/fragment_search_search_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/activities.mainactivity.search_button"/>

    <ImageButton
        android:id="@+id/fragment_search_next_page"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/activity_main_next_page"
        android:visibility="gone"/>


</LinearLayout>