<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/list_selector">

    <LinearLayout
        android:id="@+id/message_item_incoming"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:background="@drawable/grey_bubble">

        <ImageView
            android:id="@+id/message_item_thumbnail_incoming"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentLeft="true"
            android:layout_marginRight="6dp"/>

        <TextView
            android:id="@+id/message_item_message_incoming"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:textStyle="bold"
            android:layout_toRightOf="@id/message_item_thumbnail_incoming"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/message_item_outgoing"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:background="@drawable/purple_bubble">

        <ImageView
            android:id="@+id/message_item_thumbnail_outgoing"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentLeft="true"
            android:layout_marginRight="6dp"/>

        <TextView
            android:id="@+id/message_item_message_outgoing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:layout_marginTop="2dp"
            android:textStyle="bold" />

    </LinearLayout>

</RelativeLayout>